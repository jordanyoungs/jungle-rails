<%= render 'flash' %>

<h1>Log In</h1>

<%= form_for :login, url: login_path do |form| %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control', :value=>@email %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <%= form.submit 'Log In', class: 'btn btn-primary' %>
<% end %>
