<tr>
  <td>
    <%= review.user.first_name %> <%= review.user.last_name %>
  </td>
  <td>
    <%= review.description %>
  </td>
  <td>
    <%= review.rating %>/5
  </td>
    <% if current_user.present? && @product.reviews.find_by(user_id: current_user[:id]).present? %>
      <td>
        <% if current_user.present? && review[:user_id] == current_user[:id] %>
          <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
        <% end %>
      </td>
    <% end %>
</tr>